<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_23"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">

        <LinearLayout
            android:id="@+id/ll_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trip_list_gradient_pink"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim_46"
                android:layout_marginRight="@dimen/dim_53"
                android:layout_marginTop="@dimen/dim_15"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <com.mobiliya.fleet.customViews.CustomTextViewSemiBold
                    android:id="@+id/tv_miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/miles_driven"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/font_16sp"
                    tools:ignore="RtlHardcoded" />

                <com.mobiliya.fleet.customViews.CustomTextViewSemiBold
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/trip_time"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/font_16sp"
                    tools:ignore="RelativeOverlap,RtlHardcoded" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dim_16"
                android:layout_marginLeft="@dimen/dim_41"
                android:layout_marginRight="@dimen/dim_41"
                android:layout_marginTop="@dimen/dim_18"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dim_5"
                        android:src="@drawable/route_white"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim_18"
                    android:orientation="vertical"
                    android:weightSum="4"
                    tools:ignore="RtlHardcoded">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <com.mobiliya.fleet.customViews.CustomTextViewRegular
                            android:id="@+id/tv_startlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/start_location"
                            android:textColor="@color/primary_white"
                            android:textSize="@dimen/font_14sp" />

                        <com.mobiliya.fleet.customViews.CustomTextViewRegular
                            android:id="@+id/tv_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/starttime"
                            android:textColor="@color/primary_white"
                            android:textSize="@dimen/font_10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <com.mobiliya.fleet.customViews.CustomTextViewRegular
                            android:id="@+id/tv_endlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/end_location"
                            android:textColor="@color/primary_white"
                            android:textSize="@dimen/font_14sp" />

                        <com.mobiliya.fleet.customViews.CustomTextViewRegular
                            android:id="@+id/tv_endttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/starttime"
                            android:textColor="@color/primary_white"
                            android:textSize="@dimen/font_10sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>